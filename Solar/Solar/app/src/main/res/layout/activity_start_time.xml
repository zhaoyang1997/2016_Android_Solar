<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/count_time_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartTimeActivity"
    android:orientation="vertical"
    android:background="@color/colorBlack">

    <LinearLayout
        android:id="@+id/temp_ll"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/clock_back_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon1"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEC107"
            android:textSize="20sp"
            android:text=" S O L A R"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_square"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minutes_tv"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="40sp"
            android:textColor="@color/colorYellow"/>

        <TextView
            android:id="@+id/colon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text=" : "
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorYellow"/>

        <TextView
            android:id="@+id/seconds_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="00"
            android:textColor="@color/colorYellow"

            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_name1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="android"
        android:textColor="@color/colorYellow"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_begin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/backrestart"/>
        <Button
            android:id="@+id/zanting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="66dp"
            android:background="@drawable/backstop"/>
        <Button
            android:id="@+id/stop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/backend"/>

    </LinearLayout>

</LinearLayout>