<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="20dp"
    android:background="#181317"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llUser"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <net.solar.server.solar.util.CircleImageView
            android:id="@+id/ivUserImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/astronaut"/>

        <!--<ImageView-->
            <!--android:id="@+id/ivUserImg"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_marginRight="30dp"/>-->

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:text="#@$%^*"
            android:textSize="25sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSet"
        android:layout_below="@+id/llUser"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSet"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_press"
            android:textColor="#fff"
            android:text="设置"/>

        <ImageView
            android:layout_width="32sp"
            android:layout_height="28sp"
            android:src="@mipmap/arrfill"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llChange"
        android:layout_below="@id/llSet"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvChange"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/my_press"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="切换账户"/>

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@mipmap/arrfill"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llScore"
        android:layout_below="@id/llChange"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvScore"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="积分详情"/>

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@mipmap/arrfill"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRank"
        android:layout_below="@id/llScore"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRank"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="排行榜"/>

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@mipmap/arrfill"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRegister"
        android:layout_below="@id/llRank"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRegister"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="注册账号"/>

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@mipmap/arrfill"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOut"
        android:layout_below="@id/llRegister"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvOut"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="退出登录"/>

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@mipmap/arrfill"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/post_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        />


</RelativeLayout>